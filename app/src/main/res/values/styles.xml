<resources>

    <!-- Light application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarDivider">@color/md_grey_300</item>

        <item name="android:divider">@color/md_grey_300</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_700</item>
        <item name="android:textColorTertiary">@color/md_grey_500</item>
        <item name="android:textColorHint">@color/md_grey_700</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="android:textColorTertiaryInverse">@color/md_grey_900</item>

    </style>

    <style name="AppThemeLight.NoActionBar" parent="AppThemeLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppThemeLight.TransparentForSM" parent="AppThemeLight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppThemeLight.Transparent" parent="AppThemeLight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppThemeLight.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:divider">@color/md_grey_300</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_700</item>
        <item name="android:textColorTertiary">@color/md_grey_500</item>
        <item name="android:textColorHint">@color/md_grey_700</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="android:textColorTertiaryInverse">@color/md_grey_900</item>
    </style>


    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarDivider">@color/md_grey_800</item>

        <!-- colorControlHighlight is for ripple color -->
        <item name="colorControlHighlight">#40ffffff</item>
        <!-- colorControlNormal is for toolbar hamburger icon color -->
        <item name="colorControlNormal">@color/colorAccent</item>

        <item name="android:divider">@color/window_dark_bg_color</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_black_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_300</item>
        <item name="android:textColorTertiary">@color/md_grey_500</item>
        <item name="android:textColorHint">@color/md_grey_300</item>
        <item name="android:windowBackground">@color/md_black_1000</item>
        <item name="android:textColorTertiaryInverse">@color/md_grey_300</item>


    </style>


    <style name="AppThemeDark.NoActionBar" parent="AppThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppThemeDark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:divider">@color/window_dark_bg_color</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_black_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_300</item>
        <item name="android:textColorTertiary">@color/md_grey_500</item>
        <item name="android:textColorHint">@color/md_grey_300</item>
        <item name="android:windowBackground">@color/window_dark_bg_color</item>
        <item name="android:textColorTertiaryInverse">@color/md_grey_300</item>

    </style>


    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:overlapAnchor">true</item>

    </style>

    <style name="ActionBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ActionBarSubTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_grey_300</item>
    </style>


    <!-- MyDarkToolbarActionBarStyle is toolbar default theme -->
    <style name="MyDarkToolbarActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- theme for menu items other than title-->
        <item name="android:itemTextAppearance">@style/ActionBarItemAppearance</item>

    </style>

    <style name="ActionBarItemAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_grey_300</item>


    </style>


    <style name="AppThemeDark.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
